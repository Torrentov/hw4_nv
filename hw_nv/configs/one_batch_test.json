{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 22050,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": false
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "HiFiGAN",
    "args": {
      "generator_channels": 512,
      "upsample_kernel_sizes": [16, 16, 4, 4],
      "mrf_kernel_sizes": [3, 7, 11],
      "mrf_dilations": [[[1, 1], [3, 1], [5, 1]], [[1, 1], [3, 1], [5, 1]], [[1, 1], [3, 1], [5, 1]]]
    }
  },
  "data": {
    "train": {
      "batch_size": 4,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "train",
            "max_audio_length": 20.0,
            "limit": 12
          }
        }
      ]
    },
    "val": {
      "batch_size": 4,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "test",
            "max_audio_length": 20.0,
            "limit": 12
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 1e-2
    }
  },
  "loss": {
    "type": "HiFiGANLoss",
    "args": {}
  },
  "metrics": [],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 1e-2,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "nv_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
