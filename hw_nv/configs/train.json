{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 22050,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": false
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "HiFiGAN",
    "args": {
      "generator_channels": 512,
      "upsample_kernel_sizes": [16, 16, 4, 4],
      "mrf_kernel_sizes": [3, 7, 11],
      "mrf_dilations": [[[1, 1], [3, 1], [5, 1]], [[1, 1], [3, 1], [5, 1]], [[1, 1], [3, 1], [5, 1]]]
    }
  },
  "data": {
    "train": {
      "batch_size": 1,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "train",
            "crop_audio_length": 25087
          }
        }
      ]
    },
    "val": {
      "batch_size": 1,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "test",
            "max_audio_length": 20.0,
            "limit": 10
          }
        }
      ]
    },
    "test": {
      "batch_size": 3,
      "num_workers": 0,
      "datasets": [
        {
          "type": "CustomDirAudioDataset",
          "args": {
            "audio_dir": "data/datasets/test_wavs"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 2e-4,
      "betas": [0.8, 0.99],
      "weight_decay": 0.01
    }
  },
  "loss": {
    "type": "HiFiGANLoss",
    "args": {}
  },
  "metrics": [],
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.999
    }
  },
  "trainer": {
    "epochs": 2500,
    "save_dir": "saved/",
    "save_period": 10,
    "verbosity": 2,
    "monitor": "min val_total_loss",
    "early_stop": 1000000000,
    "visualize": "wandb",
    "wandb_project": "nv_project",
    "len_epoch": 1000,
    "grad_norm_clip": 10
  }
}
